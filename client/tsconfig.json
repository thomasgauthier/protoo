{
    "files": [
      "lib/index.ts"
    ],
    "compilerOptions": {
      /* Basic Options */
      "target": "ES2016",
      "module": "commonjs",
      "allowJs": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports" : true,
      "noEmit": true,
      "skipLibCheck": true,
      
      /* Strict Type-Checking Options */
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
  
      /* Additional Checks */
      "noUnusedLocals": true
    }
  }
  